{
  "name": "@thepia/flows-auth",
  "version": "1.0.3",
  "description": "Svelte authentication library with WebAuthn/passkey support for Thepia Flow applications",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "svelte": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./style.css": "./dist/style.css",
    "./dist/style.css": "./dist/style.css",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "vite build",
    "build:watch": "vite build --watch",
    "test": "vitest run --exclude \"tests/{integration,critical,disabled}/**\"",
    "test:watch": "vitest --exclude \"tests/{integration,critical,disabled}/**\"",
    "test:ui": "vitest --ui --exclude \"tests/{integration,critical,disabled}/**\"",
    "test:coverage": "vitest run --coverage --exclude \"tests/{integration,critical,disabled}/**\"",
    "test:unit": "vitest run tests/stores/ tests/utils/ tests/api/ --exclude tests/integration/ tests/critical/",
    "test:e2e": "vitest run tests/integration/ tests/critical/",
    "test:integration": "vitest run tests/integration/",
    "test:integration:env": "vitest run tests/integration/api-environment.test.ts",
    "test:integration:auth": "vitest run tests/integration/auth-store-integration.test.ts",
    "test:critical": "vitest run tests/critical/ tests/contracts/ tests/unit/response-processing.test.ts tests/unit/ui-ux-integration.test.ts",
    "test:critical-only": "vitest run tests/critical/",
    "test:critical-stubs": "vitest run tests/critical/ --reporter=verbose --bail=false",
    "test:contracts": "vitest run tests/contracts/api-response-contracts.test.ts",
    "test:auth-patterns": "vitest run tests/unit/response-processing.test.ts",
    "test:ui-ux": "vitest run tests/unit/ui-ux-integration.test.ts",
    "test:real-flow": "vitest run tests/critical/createAccount-real-flow.test.ts",
    "test:auth-store-critical": "vitest run tests/critical/auth-store-registration.test.ts",
    "test:webauthn": "vitest run tests/critical/webauthn-flow-validation.test.ts",
    "test:registration-form": "vitest run tests/critical/registration-form-real-integration.test.ts",
    "test:email-verification": "vitest run tests/critical/email-verification-flow.test.ts",
    "test:events": "vitest run tests/critical/event-emission-validation.test.ts",
    "test:errors": "vitest run tests/critical/error-handling-scenarios.test.ts",
    "test:state-machine": "vitest run tests/stores/auth-state-machine.test.ts",
    "test:auth-store": "vitest run tests/stores/auth-store.test.ts",
    "test:smoke": "vitest run tests/stores/auth-state-machine.test.ts tests/integration/api-environment.test.ts",
    "test:regression": "vitest run tests/regression/",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "svelte:check": "svelte-check --tsconfig ./tsconfig.json",
    "prepublishOnly": "npm run build",
    "publish:npm": "dotenv -- bash -c 'npm publish --registry https://npm.pkg.github.com --//npm.pkg.github.com/:_authToken=${NODE_AUTH_TOKEN}'",
    "publish:pnpm": "dotenv -- bash -c 'pnpm publish --registry https://npm.pkg.github.com --//npm.pkg.github.com/:_authToken=${NODE_AUTH_TOKEN}'",
    "publish:npm:dry": "dotenv -- bash -c 'npm publish --dry-run --registry https://npm.pkg.github.com --//npm.pkg.github.com/:_authToken=${NODE_AUTH_TOKEN}'",
    "publish:pnpm:dry": "dotenv -- bash -c 'pnpm publish --dry-run --registry https://npm.pkg.github.com --//npm.pkg.github.com/:_authToken=${NODE_AUTH_TOKEN}'",
    "pre-commit": "./scripts/pre-commit-validation.sh",
    "pre-push": "./scripts/pre-push-sanity-check.sh",
    "pre-push:quick": "./scripts/pre-push-sanity-check.sh --skip-build",
    "pre-push:fast": "./scripts/pre-push-sanity-check.sh --skip-tests --skip-build",
    "validate": "pnpm typecheck && pnpm lint && pnpm test",
    "validate:quick": "pnpm typecheck && pnpm test:smoke",
    "verify-auth-patterns": "pnpm test:critical && echo 'âœ… Authentication patterns verified'",
    "protect-auth": "pnpm test:contracts && pnpm test:auth-patterns && pnpm typecheck && pnpm build",
    "example:tasks-app-demo": "cd examples/tasks-app-demo && pnpm dev",
    "example:flows-app-demo": "cd examples/flows-app-demo && pnpm dev",
    "example:flows-app-demo:local": "cd examples/flows-app-demo && pnpm dev:local",
    "example:flows-app-demo:production": "cd examples/flows-app-demo && pnpm dev:production"
  },
  "keywords": [
    "svelte",
    "authentication",
    "webauthn",
    "passkeys",
    "flows",
    "oauth",
    "thepia"
  ],
  "author": "Thepia <dev@thepia.com>",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/thepia/flows-auth"
  },
  "bugs": {
    "url": "https://github.com/thepia/flows-auth/issues"
  },
  "homepage": "https://github.com/thepia/flows-auth#readme",
  "peerDependencies": {
    "svelte": "^4.0.0 || ^5.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.4",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/svelte": "^4.0.0",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^8.0.0",
    "jsdom": "^23.0.0",
    "svelte": "^4.0.0",
    "svelte-check": "^3.0.0",
    "svelte-preprocess": "^6.0.3",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "@simplewebauthn/browser": "^13.1.2",
    "base64url": "^3.0.1"
  },
  "publishConfig": {
    "access": "public",
    "@thepia:registry": "https://npm.pkg.github.com"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.0.0"
}
