{
  "name": "@thepia/flows-auth",
  "version": "1.0.5",
  "description": "Svelte authentication library with WebAuthn/passkey support for Thepia Flow applications",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "svelte": "./dist/src/index.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/src/index.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./stores": {
      "types": "./src/stores/index.ts",
      "import": "./src/stores/index.ts",
      "default": "./src/stores/index.ts"
    },
    "./stores/core": {
      "types": "./src/stores/core/index.ts",
      "import": "./src/stores/core/index.ts",
      "default": "./src/stores/core/index.ts"
    },
    "./stores/auth-methods": {
      "types": "./src/stores/auth-methods/index.ts",
      "import": "./src/stores/auth-methods/index.ts",
      "default": "./src/stores/auth-methods/index.ts"
    },
    "./stores/ui": {
      "types": "./src/stores/ui/index.ts",
      "import": "./src/stores/ui/index.ts",
      "default": "./src/stores/ui/index.ts"
    },
    "./stores/adapters": {
      "types": "./src/stores/adapters/index.ts",
      "import": "./src/stores/adapters/index.ts",
      "default": "./src/stores/adapters/index.ts"
    },
    "./stores/adapters/svelte": {
      "types": "./src/stores/adapters/svelte.ts",
      "import": "./src/stores/adapters/svelte.ts",
      "default": "./src/stores/adapters/svelte.ts"
    },
    "./stores/adapters/astro": {
      "types": "./src/stores/adapters/astro.ts",
      "import": "./src/stores/adapters/astro.ts",
      "default": "./src/stores/adapters/astro.ts"
    },
    "./src": {
      "types": "./src/index.ts",
      "svelte": "./src/index.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./style.css": "./dist/style.css",
    "./dist/style.css": "./dist/style.css",
    "./paraglide/runtime.js": "./dist/paraglide/runtime.js",
    "./paraglide/messages.js": "./dist/paraglide/messages.js",
    "./src/paraglide/runtime.js": "./dist/paraglide/runtime.js",
    "./src/paraglide/messages.js": "./dist/paraglide/messages.js",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "vite build",
    "build:watch": "vite build --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/stores/ tests/utils/ tests/api/ tests/components/",
    "test:integration": "vitest run tests/integration/",
    "test:critical": "vitest run tests/critical/ tests/contracts/",
    "test:smoke": "vitest run tests/stores/auth-state-machine.test.ts tests/integration/api-environment.test.ts",
    "test:package": "vitest run tests/package",
    "test:paraglide-merge": "vitest run tests/integration/paraglide-multi-directory-merge.test.ts",
    "test:demos": "pnpm test:demos:auth && pnpm test:demos:flows-app",
    "test:demos:auth": "cd examples/auth-demo && pnpm build",
    "test:demos:flows-app": "cd examples/flows-app-demo && pnpm build",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "svelte:check": "svelte-check --tsconfig ./tsconfig.json",
    "prepublishOnly": "npm run build",
    "publish:npm": "dotenv -- bash -c 'npm publish --registry https://npm.pkg.github.com --//npm.pkg.github.com/:_authToken=${NODE_AUTH_TOKEN}'",
    "publish:pnpm": "dotenv -- bash -c 'pnpm publish --registry https://npm.pkg.github.com --//npm.pkg.github.com/:_authToken=${NODE_AUTH_TOKEN}'",
    "publish:npm:dry": "dotenv -- bash -c 'npm publish --dry-run --registry https://npm.pkg.github.com --//npm.pkg.github.com/:_authToken=${NODE_AUTH_TOKEN}'",
    "publish:pnpm:dry": "dotenv -- bash -c 'pnpm publish --dry-run --registry https://npm.pkg.github.com --//npm.pkg.github.com/:_authToken=${NODE_AUTH_TOKEN}'",
    "pre-commit": "./scripts/pre-commit-validation.sh",
    "pre-push": "./scripts/pre-push-sanity-check.sh",
    "pre-push:quick": "./scripts/pre-push-sanity-check.sh --skip-build",
    "pre-push:fast": "./scripts/pre-push-sanity-check.sh --skip-tests --skip-build",
    "validate": "pnpm typecheck && pnpm check && pnpm test",
    "validate:quick": "pnpm typecheck && pnpm test:smoke",
    "validate:publish": "pnpm build && pnpm test:package",
    "verify-auth-patterns": "pnpm test:critical && echo 'âœ… Authentication patterns verified'",
    "protect-auth": "pnpm test:contracts && pnpm test:auth-patterns && pnpm typecheck && pnpm build",
    "example:tasks-app-demo": "cd examples/tasks-app-demo && pnpm dev",
    "example:flows-app-demo": "cd examples/flows-app-demo && pnpm dev",
    "example:flows-app-demo:local": "cd examples/flows-app-demo && pnpm dev:local",
    "example:flows-app-demo:production": "cd examples/flows-app-demo && pnpm dev:production"
  },
  "keywords": [
    "svelte",
    "authentication",
    "webauthn",
    "passkeys",
    "flows",
    "oauth",
    "thepia"
  ],
  "author": "Thepia <dev@thepia.com>",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/thepia/flows-auth"
  },
  "bugs": {
    "url": "https://github.com/thepia/flows-auth/issues"
  },
  "homepage": "https://github.com/thepia/flows-auth#readme",
  "peerDependencies": {
    "@xyflow/svelte": "0.1.30",
    "d3": "^7.0.0",
    "phosphor-svelte": "^2.0.0 || ^3.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@inlang/paraglide-js": "^2.3.2",
    "@sveltejs/vite-plugin-svelte": "^3.1.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/svelte": "^4.0.0",
    "@types/d3": "^7.4.3",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "@xyflow/svelte": "0.1.30",
    "cross-env": "^7.0.3",
    "d3": "^7.9.0",
    "dotenv-cli": "^8.0.0",
    "jsdom": "^23.0.0",
    "svelte": "^4.0.0",
    "svelte-check": "^3.0.0",
    "svelte-preprocess": "^6.0.3",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "@dagrejs/dagre": "^1.1.4",
    "@simplewebauthn/browser": "^13.1.2",
    "base64url": "^3.0.1",
    "zustand": "^5.0.8"
  },
  "publishConfig": {
    "access": "public",
    "@thepia:registry": "https://npm.pkg.github.com"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.0.0"
}
